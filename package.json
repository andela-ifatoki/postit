{
  "name": "postit",
  "version": "1.0.0",
  "description": "Broadcast messages to groups across your organisation",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --compilers js:babel-core/register ./server/test --recursive --timeout 50000",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon --watch server ./server/bin/www --exec babel-node",
    "prestart": "npm run build",
    "start": "node ./dist/bin/www",
    "build": "rimraf ./dist && babel ./server -d ./dist --copy-files"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-ifatoki/postit.git"
  },
  "author": "Itunuloluwa Fatoki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela-ifatoki/postit/issues"
  },
  "homepage": "https://github.com/andela-ifatoki/postit#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.0",
    "cookie-parser": "^1.4.3",
    "debug": "^3.0.1",
    "express": "^4.15.4",
    "faker": "^4.1.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "rimraf": "^2.6.2",
    "sequelize": "^4.8.3",
    "serve-favicon": "^2.4.3",
    "validator": "^8.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "chai": "^4.1.2",
    "chai-arrays": "^1.1.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^2.3.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.5.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.12.0",
    "nyc": "^11.2.1",
    "sinon": "^3.2.1",
    "supertest": "^3.0.0"
  }
}
